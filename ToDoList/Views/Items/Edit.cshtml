<h1>To Do List</h1>
<hr>

<h2>Edit item: @Model["item"].GetDescription()</h2>
<form action='/items/@Model["item"].GetId()' method="post">
  <label for="newDescription">Name:</label>
  <input type="text" name="newDescription" value='@Model["item"].GetDescription()'>
  <label for="newDueDate">Due Date:</label>
  <input type="date" name="newDueDate" id="newDueDate" value='@Model["item"].GetDueDate()'>
  <button type="submit">Edit</button>
</form>

<h4><a href='/items/@Model["item"].GetId()'>Return to previous page</a></h4>