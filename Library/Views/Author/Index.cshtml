<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
}

@if (@Model.Count != 0)
{
  @foreach (var author in Model)
  {
    <h3><a href='/authors/@author.GetId()'>@author.GetName()</a></h3>
  }
}

<h3><a href='/authors/new'>Add a new category</a></h3>
<p><a href='/'>Back home</a></p>
